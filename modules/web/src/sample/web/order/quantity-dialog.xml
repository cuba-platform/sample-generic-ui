<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="sample.web.order.QuantityDialog"
        focusComponent="field"
        messagesPack="sample.web.order">
    <layout expand="buttonsBox"
            spacing="true">
        <label id="label"
               value="label"/>
        <textField id="field"
                   width="100%"/>
        <hbox id="buttonsBox"
              align="MIDDLE_RIGHT"
              spacing="true">
            <button id="okBtn"
                    caption="OK"
                    invoke="confirm"/>
            <button id="cancelBtn"
                    caption="Cancel"
                    invoke="cancel"/>
        </hbox>
    </layout>
</window>
